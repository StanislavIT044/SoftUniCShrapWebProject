@model WindowToTheSociety.Web.ViewModels.Pages.CreatePageInputModel
@{
    this.ViewData["Title"] = "Create Page";
}

<div>
    <form method="post" class="form-group col-md-12" enctype="multipart/form-data">
        <div class="form-group col-md-12">
            <label asp-for="Picture"></label>
            <input asp-for="Picture" class="form-control" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12">
            <label asp-for="Title"></label>
            <textarea asp-for="Title" class="form-control" rows="1" cols="139"></textarea>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-12 text-center">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </form>
</div>