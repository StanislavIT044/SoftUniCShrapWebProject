@using WindowToTheSociety.Web.ViewModels.Pages
@model PageViewModel
@{
    this.ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-8 center">
        <div class="card-user card">
            <div class="image">
                <a href="@Model.CoverPhotoUrl">
                    <img alt="..." src="@Model.CoverPhotoUrl" width="100%" height="80%">
                </a>
            </div>
            <div class="author">
                <h5>@Model.Title</h5>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-8 center">
        <a class="btn btn-primary col-md-12" asp-controller="Pages" asp-action="CreatePage">Add Post</a>
    </div>
</div>

<hr />

@foreach (var post in Model.Posts)
{
    <div class="row">
        <div class="col-md-8 center">
            <div class="card-user card">

                <div class="author">
                    <div class="card-body">
                        <a href="">
                            <img alt="..." class="avatar border-gray" src="" width="150%">
                        </a>
                        <h5>@Model.Title</h5>
                    </div>
                </div>
                <div class="image">
                    <a href="@Model.CoverPhotoUrl">
                        <img alt="..." src="@Model.CoverPhotoUrl" width="100%" height="80%">
                    </a>
                </div>
            </div>
        </div>
    </div>
}